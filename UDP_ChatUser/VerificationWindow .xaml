        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VerificationWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Email:" Margin="0 0 0 5"/>
            <TextBox x:Name="EmailTextBox" Width="200" Margin="0 0 0 10" Text="goch@gmail.com"/>

            <TextBlock Text="Password:" Margin="0 0 0 5"/>
                <PasswordBox x:Name="PasswordTextBox" Width="200" Margin="0 0 0 10" Password="Goch2024"/>

            <Button Content="Verify" Click="VerifyButton_Click" Width="100" Margin="0 0 0 10"/>

            <Button Content="Register" Click="RegisterButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
