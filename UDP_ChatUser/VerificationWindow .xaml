<Window x:Class="UDP_ChatUser.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VerificationWindow" Height="230" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Email:       " Margin="5"/>
                <ComboBox x:Name="EmailComboBox" Width="200" Margin="5"  IsEditable="True"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Password: " Margin="5"/>
                <PasswordBox x:Name="PasswordTextBox" Width="200" Margin="5"/>
            </StackPanel>

            <Button Content="Verify" Click="VerifyButton_Click" Width="100" Margin="0 0 0 10"/>

            <Button Content="Register" Click="RegisterButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
