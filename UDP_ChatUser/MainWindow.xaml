<Window x:Class="UDP_ChatUser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDP_ChatUser"
        mc:Ignorable="d"
        Title="MainWindow" Height="180" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <TextBlock Text="Ip Address:" Margin="5" DockPanel.Dock="Left" />
            <TextBox x:Name="IpTextBox" Width="250" Margin="5"/>
        </DockPanel>

        <DockPanel Grid.Row="1">
            <TextBlock Text="Port:" Margin="5"/>
            <TextBox x:Name="PortTextBox" Width="200" Margin="5"/>
        </DockPanel>
        <DockPanel Grid.Row="2">
            <Button Content="Connect" Click="Button_Click" Width="100" Margin="5"/>
        </DockPanel>
    </Grid>
</Window>
