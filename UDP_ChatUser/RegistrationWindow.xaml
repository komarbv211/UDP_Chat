<Window x:Class="UDP_ChatUser.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegistrationWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Full Name:" Margin="0 0 0 5"/>
            <TextBox x:Name="FullNameTextBox" Width="200" Margin="0 0 0 10"/>

            <TextBlock Text="Email:" Margin="0 0 0 5"/>
            <TextBox x:Name="EmailTextBox" Width="200" Margin="0 0 0 10"/>

            <TextBlock Text="Password:" Margin="0 0 0 5"/>
            <PasswordBox x:Name="PasswordTextBox" Width="200" Margin="0 0 0 10"/>

            <Button Content="Save" Click="RegisterButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
