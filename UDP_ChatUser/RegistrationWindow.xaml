<Window x:Class="UDP_ChatUser.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegistrationWindow" Height="240" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Full Name: " Margin="5"/>
                <TextBox x:Name="FullNameTextBox" Width="200" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Email:         " Margin="5"/>
                <TextBox x:Name="EmailTextBox" Width="200" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Password:   " Margin="5"/>
                <PasswordBox x:Name="PasswordTextBox" Width="200" Margin="5"/>
            </StackPanel>

            <Button Content="Save" Click="RegisterButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
